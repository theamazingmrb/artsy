
<h1>Today's Post</h1>


<%= link_to "Create new post", :new_post %>

<ul>

    <% @posts.each do |post| %>
        <li>
            <strong> <%= post.title %> </strong> - <%= post.content %> <br>

            <%= link_to "More info", post_path(post) %> POSTED by: <%= post.user.f_name %>
        </li>
    <% end %>
</ul>
