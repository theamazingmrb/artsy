
<h1> <%= @post.title %> </h1>

<p> <%= @post.content %></p>

<%= image_tag @post.image.url(:medium)%> <br>
<%= link_to "Back to the list!", posts_path %>
<%= link_to "Edit this post!", edit_post_path(@post) if @post.user == current_user %>
<%= link_to "Delete this post!", :post, method: :delete, data: { confirm: "Are you sure you want to delete this bean?"} if @post.user == current_user %>
