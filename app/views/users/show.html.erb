
<h1><%= @user.f_name%></h1>
<%= link_to "Back to POST", posts_path %> <br>
<br>

<% @user_posts.each do |post| %>

<%= post.title %> <br>
<%= post.content %> <br>
<% if post.image.file? %>
  <%= image_tag post.image.url(:medium) %> <br>
  <% end %>
   <br>

  <%= link_to "Editer", edit_post_path(post) if @user == current_user%>
  <%= link_to "Deleteer", post_path(post), method: :delete, data: { confirm: "Are you sure you want to delete this Post?"} if @user == current_user%>




<hr>

  <% end %>
